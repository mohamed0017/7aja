<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/off_white"
        tools:context=".View.ui.AddProduct.AddProductFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/selectCategory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/border"
                android:layout_margin="@dimen/_16sdp"
                android:gravity="center"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/colorPrimaryDark"
                android:drawableEnd="@drawable/left_arrow"
                android:paddingEnd="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:drawablePadding="@dimen/_8sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/select_cat"/>

        <TextView
                android:id="@+id/uploadImagesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/selectCategory"
                android:text="@string/upload_img"
                app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
                android:id="@+id/uploadImages"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:layout_constraintTop_toBottomOf="@id/uploadImagesText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:src="@drawable/addphoto"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/selectedImagesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/uploadImages"/>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/addProInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:paddingStart="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/selectedImagesList">

            <TextView
                    android:id="@+id/productInfoTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/product_info"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/proNameAr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pro_name_ar"
                    app:layout_constraintTop_toBottomOf="@id/productInfoTitle">
                <EditText
                        android:id="@+id/addProNameAr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/proNameEn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pro_name_en"
                    app:layout_constraintTop_toBottomOf="@id/proNameAr">
                <EditText
                        android:id="@+id/addProNameEn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/proPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pro_price"
                    app:layout_constraintTop_toBottomOf="@id/proNameEn">
                <EditText
                        android:id="@+id/addProPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/proDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pro_discount"
                    app:layout_constraintTop_toBottomOf="@id/proPrice">
                <EditText
                        android:id="@+id/addProDiscount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/proQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pro_quantity"
                    app:layout_constraintTop_toBottomOf="@id/proDiscount">
                <EditText
                        android:id="@+id/addProQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/proTagsAr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pro_tags_ar"
                    app:layout_constraintTop_toBottomOf="@id/proQuantity">
                <EditText
                        android:id="@+id/addProTagsAr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/proTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pro_tags"
                    app:layout_constraintTop_toBottomOf="@id/proTagsAr">
                <EditText
                        android:id="@+id/addProTags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/proDescriptionAr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pro_description_ar"
                    app:layout_constraintTop_toBottomOf="@id/proTags">
                <EditText
                        android:id="@+id/addProDescriptionAr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/proDescriptionEn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pro_description_en"
                    android:layout_marginBottom="@dimen/_8sdp"
                    app:layout_constraintTop_toBottomOf="@id/proDescriptionAr">
                <EditText
                        android:id="@+id/addProDescriptionEn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:id="@+id/addProductAttributesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/product_attributes"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintTop_toBottomOf="@+id/proDescriptionEn"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/addProductAttributes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    app:layout_constraintTop_toBottomOf="@id/addProductAttributesTitle"/>

            <Button
                    android:id="@+id/addProductBut"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/add_pro"
                    android:background="@drawable/rounded_but"
                    android:textColor="@color/white"
                    android:layout_margin="@dimen/_20sdp"
                    app:layout_constraintTop_toBottomOf="@+id/addProductAttributes"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>