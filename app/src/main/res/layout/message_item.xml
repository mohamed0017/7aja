<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_6sdp"
        android:paddingBottom="@dimen/_6sdp"
        android:background="@drawable/shadow_white_shap">

    <ImageView
            android:id="@+id/chatItemImg"
            android:layout_width="0dp"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/image_circle"
            android:scaleType="fitCenter"
            android:padding="@dimen/_10sdp"
            android:layout_weight="0.8"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            app:srcCompat="@drawable/ic_person_black_24dp"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

        <TextView
                android:id="@+id/chatItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/colorPrimaryDark"/>

        <TextView
                android:id="@+id/chatItemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:lines="2"
                android:maxLines="2"/>

        <TextView
                android:id="@+id/chatItemCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black_overlay"
                android:text="0"/>
    </LinearLayout>

</LinearLayout>