<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_6sdp"
        android:paddingBottom="@dimen/_6sdp"
        android:background="@drawable/shadow_white_shap">

    <ImageView
            android:id="@+id/notificationItemImg"
            android:layout_width="0dp"
            android:layout_height="@dimen/_70sdp"
            android:background="@drawable/shadow_white_shap"
            android:scaleType="fitCenter"
            android:padding="@dimen/_20sdp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:src="@mipmap/splash_logo"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

        <TextView
                android:id="@+id/notificationItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16ssp"
                android:text="for sale"
                android:textColor="@color/colorPrimaryDark"/>

        <TextView
                android:id="@+id/notificationItemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14ssp"
                android:lines="2"
                android:maxLines="2"
                android:text="for sale for sale for sale "/>

            <TextView
                    android:id="@+id/notificationItemDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/black_overlay"
                    android:text="2019/9/9"/>
    </LinearLayout>

</LinearLayout>